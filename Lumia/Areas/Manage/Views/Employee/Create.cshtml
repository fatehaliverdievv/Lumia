
@{
    ViewData["Title"] = "Create";
}
@model CreateEmployeeVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" placeholder="Surname">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstagramUrl">Instagram</label>
                    <input asp-for="InstagramUrl" type="text" class="form-control" placeholder="Url">
                    <span asp-validation-for="InstagramUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkedinLink">Linkedin</label>
                    <input asp-for="LinkedinLink" type="text" class="form-control" placeholder="Url">
                    <span asp-validation-for="LinkedinLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookUrl">Facebook</label>
                    <input asp-for="FacebookUrl" type="text" class="form-control" placeholder="Url">
                    <span asp-validation-for="FacebookUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink">Twitter</label>
                    <input asp-for="TwitterLink" type="text" class="form-control" placeholder="Url">
                    <span asp-validation-for="TwitterLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PositionId">Position</label>
                    <select asp-for="PositionId" asp-items="@ViewBag.Positions" class="form-control" ></select>
                    <span asp-validation-for="PositionId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Name</label>
                    <input asp-for="Image"class="form-control" placeholder="Name">
                    <span asp-validation-for="Image"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Create</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>